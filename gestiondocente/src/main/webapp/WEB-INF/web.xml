<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>gestiondocente</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>Este servlet va a gestionar las peticiones relacionadas con los alumnos</description>
    <display-name>AlumnoServlet</display-name>
    <servlet-name>AlumnoServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.AlumnoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AlumnoServlet</servlet-name>
    <url-pattern>/alumno.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Servlet que gestiona las peticiones de los profesores</description>
    <display-name>ProfesorServlet</display-name>
    <servlet-name>ProfesorServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.ProfesorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfesorServlet</servlet-name>
    <url-pattern>/profesor.do</url-pattern>
  </servlet-mapping>
    <servlet>
    <description>Servlet que gestiona las peticiones de los cursos</description>
    <display-name>CursoServlet</display-name>
    <servlet-name>CursoServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.CursoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CursoServlet</servlet-name>
    <url-pattern>/curso.do</url-pattern>
  </servlet-mapping>
</web-app>